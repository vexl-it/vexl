# =============================================================================
# Vexl Local Development Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the required values.
# Variables marked [REQUIRED] must be set for the application to start.
# Variables marked [OPTIONAL] have sensible defaults for local development.
# =============================================================================

# -----------------------------------------------------------------------------
# INFRASTRUCTURE [REQUIRED]
# -----------------------------------------------------------------------------
# These variables configure connections to local Docker services.
# Default values work with dev.docker-compose.yaml

# PostgreSQL Database
DB_URL=postgresql://localhost:5432
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_NAME=vexl-dev

# Redis Cache
REDIS_URL=redis://localhost:6379

# Port overrides for Docker (if defaults conflict with your system)
POSTGRES_PORT=5432
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# SECURITY KEYS [REQUIRED]
# -----------------------------------------------------------------------------
# Cryptographic keys for authentication and encryption.
# For local dev, you can generate test keys or use placeholder values.

# ECDSA Key Pair - Used for signing and verifying tokens
# Generate with: openssl ecparam -genkey -name prime256v1 | openssl ec -outform DER | base64
SECRET_PUBLIC_KEY="your-ecdsa-public-key-base64"
SECRET_PRIVATE_KEY="your-ecdsa-private-key-base64"

SECRET_HMAC_KEY=your-hmac-key
SECRET_EAS_KEY=your-eas-key


# -----------------------------------------------------------------------------
# SERVICE PORTS [OPTIONAL]
# -----------------------------------------------------------------------------
# HTTP ports for each backend service. Defaults are shown.
# Change if you have port conflicts on your machine.

USER_SERVICE_PORT=3001
CONTACT_SERVICE_PORT=3002
OFFER_SERVICE_PORT=3003
CHAT_SERVICE_PORT=3004
LOCATION_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006
BTC_EXCHANGE_RATE_SERVICE_PORT=3007
FEEDBACK_SERVICE_PORT=3008
CONTENT_SERVICE_PORT=3009
METRICS_SERVICE_PORT=3010

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES [OPTIONAL]
# -----------------------------------------------------------------------------
# Third-party service credentials. Not required for basic local development.
# Some features (SMS verification, push notifications) won't work without these.


EXPO_ACCESS_TOKEN=""

# Prelude - Alternative verification provider
# Get token from: https://prelude.dev/
DEV_USER_SERVICE_PRELUDE_API_TOKEN=

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS [OPTIONAL]
# -----------------------------------------------------------------------------
# Convenience settings for local development and testing.

# Environment mode
NODE_ENV=development

LOGIN_CODE_DUMMY_FOR_ALL=true
# Verification provider: "twilio" | "prelude" | "dummy"
# Use "dummy" for local testing without real SMS
VERIFICATION_PROVIDER=prelude

# Dummy phone numbers for testing (bypass real SMS verification)
# Comma-separated list of phone numbers that accept any code
LOGIN_CODE_DUMMY_NUMBERS=+1234567890

# Code that works with dummy numbers
LOGIN_CODE_DUMMY_CODE=111111


DEV_CONTENT_SERVICE_WEBFLOW_TOKEN=your-webflow-token
DEV_CONTENT_SERVICE_WEBFLOW_EVENTS_COLLECTION_ID=your-collection-id
DEV_CONTENT_SERVICE_WEBFLOW_SPEAKERS_COLLECTION_ID=your-collection-id
DEV_CONTENT_SERVICE_WEBFLOW_BLOG_COLLECTION_ID=your-collection-id


DEV_CONTACT_SERVICE_FIREBASE_CREDENTIALS={"type":"service_account","project_id":"your-project","private_key_id":"","private_key":"","client_email":"","client_id":"","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":""}

# "dev"
DEV_CONTACT_SERVICE_ADMIN_TOKEN_HASH="your-admin-token-hash"


DEV_CONTACT_SERVICE_S3_BUCKET_NAME="your-s3-bucket"
DEV_CONTACT_SERVICE_AWS_REGION="your-aws-region"

DEV_LOCATION_SERVICE_GOOGLE_PLACES_API_KEY="your-google-api-key"

DEV_NOTIFICATION_SERVICE_FCM_TOKEN_PUBLIC_KEY=
