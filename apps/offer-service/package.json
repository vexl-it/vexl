{
  "name": "@vexl-next/offer-service",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "yarn jest",
    "test:watch": "yarn jest --watch",
    "build": "yarn typecheck && yarn build:esbuild",
    "build:esbuild": "node esbuild.config.js",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf ./dist",
    "format": "prettier --check \"**/*.{js,mjs,cjs,jsx,ts,tsx,md,json}\"",
    "format:fix": "prettier --write \"**/*.{js,mjs,cjs,jsx,ts,tsx,md,json}\"",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "dev": "npx tsx -r dotenv/config src/index.ts",
    "start": "node dist"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@vexl-next/eslint-config/index"
    ]
  },
  "dependencies": {
    "@effect/experimental": "^0.32.3",
    "@effect/opentelemetry": "^0.39.12",
    "@effect/platform": "^0.69.19",
    "@effect/platform-node": "^0.64.21",
    "@effect/sql": "^0.20.3",
    "@effect/sql-pg": "^0.21.3",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.1",
    "@opentelemetry/sdk-trace-node": "^1.23.0",
    "@opentelemetry/sdk-trace-web": "^1.23.0",
    "@sentry/esbuild-plugin": "^2.10.2",
    "@sentry/node": "^7.93.0",
    "@sentry/profiling-node": "^1.3.5",
    "@vexl-next/cryptography": "0.0.0",
    "@vexl-next/domain": "0.0.0",
    "@vexl-next/generic-utils": "0.0.0",
    "@vexl-next/rest-api": "0.0.0",
    "@vexl-next/server-utils": "0.0.0",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "effect": "^3.10.12",
    "effect-http": "^0.82.0",
    "effect-http-node": "^0.22.0",
    "fast-check": "^3.20.0",
    "ioredis": "^5.4.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/pg": "^8",
    "@types/source-map-support": "^0.5.10",
    "@vexl-next/esbuild": "0.0.0",
    "@vexl-next/eslint-config": "0.0.0",
    "@vexl-next/prettier-config": "0.0.0",
    "@vexl-next/tsconfig": "0.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.1",
    "glob": "^11.0.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "rimraf": "^4.4.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.16.0",
    "typescript": "^5.6.3"
  },
  "prettier": "@vexl-next/prettier-config"
}
