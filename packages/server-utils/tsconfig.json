{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ES2022",
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": false,
    "noUncheckedIndexedAccess": true
  },
  "exclude": ["./dist/**", "./tests/**", "node_modules"],
  "include": ["./src", "./jest.config.ts", "./jest.setup.ts"]
}
